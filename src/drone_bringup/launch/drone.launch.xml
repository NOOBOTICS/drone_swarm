<launch>
    
    <!-- this is not the source robot.urdf path it is the installation path where urdf is installed which is in install/ package name/ share/ package name/drone1/robot.urdf -->
    <let name="urdf_path" value="$(find-pkg-share drone_description)/drone1/main.urdf.xacro"/>
    <let name="rviz_config" value="$(find-pkg-share drone_description)/rviz/drone_conf.rviz"/>

    
    <node pkg="robot_state_publisher" exec="robot_state_publisher" output="screen">
        <param name="robot_description" value="$(command 'xacro $(var urdf_path)')" />
    </node>
    <!-- <node pkg="" 
     ros2 launch ros_gz_sim gz_sim.launch.py gz_args:="empty.sdf"-->

     <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="empty.sdf -r"/>
    </include>

    <!-- argument is something that is added with the command, we can add anything, ie abcd, efgh etc.
    ros2 run ros_gz_sim create   -name drone1   -topic robot_description   -x 2.0   -y 0   -z 0.3 -->
    <node pkg="ros_gz_sim" exec="create" args="-topic robot_description -x 2.0 -y 0 -z 0.3"/>



    <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui"/>

    <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_config)"/>

</launch>